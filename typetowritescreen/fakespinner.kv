#:import hex kivy.utils.get_color_from_hex
<FakeSpinner@ModalView>:

    size_hint: 1, .1
    pos_hint: {"center_x": .5, "center_y": .6}
    auto_dismiss: False
    color: (1,1,1,1)
    MDBoxLayout:
        orientation:'vertical'
        Spinner:
            id: kurir

            height:90
            size_hint_x:0.5
            size_hint_y:None
            pos_hint:{'center_x': 0.5}
            text:"KURIR"
            on_text:app.screen.ids.typetowritescreen.arrange(self.text)



            values:["ALL","JNE", "JNT", "POS", "LION", "NINJA", "SICEPAT", "TIKI", "ANTERAJA", "WAHANA"]

        Widget :
            size_hint_y : None
            height : 30
        Widget :
            size_hint_y : None
            height : 30
        Widget :
            size_hint_y : None
            height : 30
        Widget :
            size_hint_y : None
            height : 30

        MDIconButton:


            icon:'close'
            theme_text_color:'Custom'
            md_bg_color: app.theme_cls.primary_color
            text_color: [35/255,59/255,54/255,1]
            on_release:app.screen.ids.typetowritescreen.close_spinner()
            pos_hint:{'center_x':0.5}

