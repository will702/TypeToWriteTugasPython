
<TooltipMDIconButton@MDIconButton+MDTooltip>

<CarouselScreen>:

    Image:
        id:image1
        source:''
        allow_stretch:True
        keep_ratio:False


    MDCard:
        orientation:'vertical'

        size_hint:0.9,0.8
        elevation:6
        pos_hint:{'center_x':0.5,'center_y':0.55}
        border_radius: 20
        radius: [15]

        MyCarousel:

            size_hint_y:0.9


            pos_hint_x:0.5
            pos_hint_y:0.5

            id:carousel
        BoxLayout:
            orientation:'vertical'
            size_hint_y:0.1
            pos_hint:{'center_y':0.1}
            MDLabel:
                id:label
                text:""
                size_hint_y:0.08

                halign:'center'

    TooltipMDIconButton:
        tooltip_text:"Scan"
        icon: 'qrcode-scan'
        theme_text_color:'Custom'
        text_color: app.theme_cls.primary_color
        md_bg_color:[35/255,59/255,54/255,1]




        on_release:

            app.picture_taken('',filename=label.text)

        pos_hint: {'center_x': 0.9,'center_y':0.05}

    TooltipMDIconButton:

        icon: 'arrow-left'
        theme_text_color:'Custom'
        text_color: app.theme_cls.primary_color
        md_bg_color:[35/255,59/255,54/255,1]
        tooltip_text:'Back'
        on_release:
            root.go_back()

        pos_hint: {'center_x': 0.1,'center_y':0.05}

